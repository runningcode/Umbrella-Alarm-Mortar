<?xml version="1.0" encoding="utf-8"?>

<com.osacky.umbrella.ui.now.NowView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/keyline_1"
        android:paddingLeft="@dimen/keyline_1"
        style="@style/Display4"
        />

    <TextView
        android:id="@+id/text_current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/keyline_1"
        android:paddingLeft="@dimen/keyline_1"
        style="@style/Headline"
        />

    <com.echo.holographlibrary.LineGraph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:lineStrokeColor="@color/theme_accent"
        app:lineAxisColor="@color/theme_primary_dark"
        app:lineStrokeWidth="4dip"
        app:lineStrokeSpacing="8dip"
        />


    <TextView
        android:id="@+id/attribution"
        android:text="@string/powered_by_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        style="?android:attr/textAppearanceSmall"/>

</com.osacky.umbrella.ui.now.NowView>