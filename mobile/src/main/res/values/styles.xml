<resources>


    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_primary</item>
    </style>

    <style name="None"/>

    <style name="Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Display1">
        <item name="android:textSize">@dimen/text_size_display_1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Display3">
        <item name="android:textSize">@dimen/text_size_display_3</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Display4">
        <item name="android:textSize">@dimen/text_size_display_4</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
